<?xml version="1.0"?>
<resources>

    <style name="AppThemeNoBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/green_principal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/bluePrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
<!--        <item name="buttonStyle">@style/ButtonGeneral</item>-->
        <item name="popupMenuStyle">@style/PopupStyle</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <!--<item name="navigationViewStyle">@style/Widget.App.NavigationView</item>-->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="imageButtonStyle">@style/imageButton</item>
        <!--<item name="tabStyle">@style/tabLayout</item>-->
        <item name="spinnerStyle">@style/spinner_style</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyleGeneral</item>

    </style>

    <style name="AppThemeShowBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="MyDatePickerStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="showTitle">false</item>
        <item name="android:headerBackground">@color/gray2</item>
        <item name="android:background">@color/white</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerMonthTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="PopupStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/background_popup</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/drawable_spinner</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="ButtonGeneral" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyleGeneral" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextAppearance">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@drawable/drawable_text_selector</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/selector_radio_button</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.MyApplicationNavigation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplicationNavigation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CustomDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="TextviewDark">
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
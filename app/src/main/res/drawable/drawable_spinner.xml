<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">

        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/black" />
                    <corners android:radius="4dp" />
                    <solid android:color="@color/white" />
                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item>
                <bitmap android:layout_marginEnd="5dp" android:gravity="right"
                    android:src="@drawable/ic_keyboard_arrow_down"
                    android:tint="@color/dark_gray" />
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/dark_gray02" />
                    <corners android:radius="4dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>

            <item>
                <bitmap android:layout_marginEnd="4dp" android:gravity="right"
                    android:src="@drawable/ic_keyboard_arrow_down"
                    android:tint="@color/dark_gray02" />
            </item>
        </layer-list>
    </item>

</selector>